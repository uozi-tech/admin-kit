{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "nxCloudId": "672616fc94ea1032f07a83d7",
  "workspaceLayout": {
    "libsDir": "packages"
  },
  "release": {
    "projects": [
      "shared-config",
      "request",
      "layout-antdv",
      "curd"
    ],
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": {
        "createRelease": "github",
        "file": true,
        "renderOptions": {
          "authors": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    },
    "projectsRelationship": "independent",
    "git": {
      "commit": true,
      "stageChanges": true,
      "tag": true
    }
  },
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/publish.yml"
    ],
    "default": [
      "sharedGlobals"
    ]
  }
}
