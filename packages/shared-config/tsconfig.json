{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "types": [
      "vite/client",
      "vitest/config"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
